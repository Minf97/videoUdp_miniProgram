.container {
    width: 100%;
    min-height: 100vh;
}

.videoArea {
    width: 100%;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: pink; */
}
.audioBtn {
    padding: 50rpx 0;
}
.info {
    width: 100%;
    text-align: center;
    margin-bottom: 90rpx;
    color: var(--color-h1)
}
.row {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 40rpx 0;
}
.boxColumn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.txt {
    margin-top: 10rpx;
}
.icon {
    width: 90rpx;
    height: 90rpx;
}